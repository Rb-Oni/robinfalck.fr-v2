{% extends 'base.html.twig' %}

{% block title %}Contact | Création de Sites Webs | Robin FALCK{% endblock %}

{% block body %}

    <h1 class="text-white text-center mt-16 lg:my-16 font-bold text-6xl lg:text-8xl">CONTACT</h1>

    <section class="container mx-auto px-5 lg:px-0 w-screen lg:w-1/3">
        <div class="flex flex-wrap justify-between text-white invisible lg:visible">
            <a href="tel:0648526812" class="font-semibold group">
                <svg xmlns="http://www.w3.org/2000/svg"
                     class="h-5 w-5 inline text-greenc text-greenc group-hover:text-greenh" viewBox="0 0 20 20"
                     fill="currentColor">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                </svg>
                06 48 52 68 12</a>
            <a href="mailto:robin.falck57@gmail.com" class="font-semibold group">robin.falck57@gmail.com
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline text-greenc group-hover:text-greenh"
                     viewBox="0 0 20 20"
                     fill="currentColor">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                </svg>
            </a>
        </div>
    </section>

    <section class="container mx-auto px-5 lg:px-0 mb-16 w-screen lg:w-1/3">

        {% if success is defined %}
            <div class="bg-greenc border-l-4 border-greenh text-white p-4 my-5" role="alert">
                <p class="font-bold">Succès !</p>
                <p class="font-semibold">Votre message a bien été envoyé.</p>
            </div>
        {% endif %}

        {% if errors is defined %}
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 my-5" role="alert">
                <p class="font-bold">Erreur !</p>
                <p class="font-semibold">Une erreur est survenue.</p>
                <span class="mt-2">
                            {% for error in errors %}
                                {{ error }}
                                {% if not loop.last %}<br>{% endif %}
                            {% endfor %}
                        </span>
            </div>
        {% endif %}

        {{ form_start(contactForm) }}

        <div class="text-center font-semibold flex flex-col">
            {{ form_label(contactForm.email) }}
            {{ form_widget(contactForm.email) }}

            {{ form_label(contactForm.subject) }}
            {{ form_widget(contactForm.subject) }}

            {{ form_label(contactForm.message) }}
            {{ form_widget(contactForm.message) }}

            <div class="justify-center">
                {{ form_row(contactForm.submit) }}
            </div>
        </div>
        {{ form_end(contactForm) }}
    </section>

{% endblock %}
